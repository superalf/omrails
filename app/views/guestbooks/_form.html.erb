<%= simple_form_for(@guestbook) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
        <%= f.input :text, as: :text, input_html: { rows: "6" } %>
        <%= recaptcha_tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
